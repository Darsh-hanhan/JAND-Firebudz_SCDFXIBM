<div class="container">
<div class="jumbotron">
    <h1 class="display-4">FAQs</h1>
    <p class="lead">Frequently Asked Questions</p>
</div>	

<div class="accordion" id="answerAccordion">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">
            <button class="btn btn-link" type="button" data-toggle="collapse"
			data-target="#collapseOne1000" aria-expanded="false" aria-controls="collapseOne">
				Approximately how much would the delivery cost?
				<i class="fas fa-chevron-down"></i>
            </button>
          </h2>
        </div>
		<div id="collapseOne1000" class="collapse" aria-labelledby="headingOne"
			data-parent="#answerAccordion">
			<div class="card-body">
            	<b>For local/domestic shipping:</b> $3 - $7<br>
                <b>For overseas shipping:</b> $6 - $13
			</div>
		</div>
	  </div>		
</div>
	
{{#if faq}}
  	{{#each faq}}
      <div class="card">
        
        <div class="card-header">
          <p class="mb-0">
			<a href="/faq/edit?uuid={{uuid}}"   class="card-link">
				<i class="fas fa-pencil-alt"></i>
			</a>
			<a href="/faq/delete?uuid={{uuid}}" class="card-link" data-toggle="confirmation" 
				data-title="Confirm delete?">
				<i class="far fa-trash-alt"></i>
			</a>
            <button class="btn btn-link" type="button" data-toggle="collapse" 
			      data-target="#collapseOne{{id}}" aria-expanded="false" aria-controls="collapseOne">
					  {{question}}<i class="fas fa-chevron-down"></i>
            </button>
			</p>		
		</div>

		    <div class="accordion" id="answerAccordion">
			    <div id="collapseOne{{id}}" class="collapse" aria-labelledby="headingOne"
				    data-parent="#answerAccordion">
				    <div class="card-body">  {{answer}}</div>
			    </div>
		    </div>	
      </div>
	{{/each}}	
	
{{/if}}

</div>
